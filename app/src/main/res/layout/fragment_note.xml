<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.notes.NotesFragment"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/colorsRg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:paddingBottom="16dp">
        <com.survivalcoding.noteapp.presentation.ColorRadioButton
            android:id="@+id/lightSalmonCrb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:colorValue="@color/light_salmon"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <com.survivalcoding.noteapp.presentation.ColorRadioButton
            android:id="@+id/primroseCrb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:colorValue="@color/primrose"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <com.survivalcoding.noteapp.presentation.ColorRadioButton
            android:id="@+id/pastelVioletCrb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:colorValue="@color/pastel_violet"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <com.survivalcoding.noteapp.presentation.ColorRadioButton
            android:id="@+id/aquamarineBlueCrb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:colorValue="@color/aquamarine_blue"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <com.survivalcoding.noteapp.presentation.ColorRadioButton
            android:id="@+id/pinkSherbetCrb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:colorValue="@color/pink_sherbet"/>
    </RadioGroup>

    <EditText
        android:id="@+id/titleEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/colorsRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:hint="Title" />

    <EditText
        android:id="@+id/contentEv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleEv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:textSize="24sp"
        android:hint="Content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_save_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>