<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">

    <ImageView
        android:id="@+id/add_edit_iv_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_color"
        android:contentDescription="@string/color_orange_button"
        android:elevation="10dp"
        android:src="@drawable/ic_color_border"
        app:layout_constraintEnd_toStartOf="@id/add_edit_iv_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_edit_iv_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_color"
        android:backgroundTint="@color/yellow"
        android:contentDescription="@string/color_yellow_button"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@id/add_edit_iv_purple"
        app:layout_constraintStart_toEndOf="@id/add_edit_iv_orange"
        app:layout_constraintTop_toTopOf="@id/add_edit_iv_orange" />

    <ImageView
        android:id="@+id/add_edit_iv_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_color"
        android:backgroundTint="@color/purple"
        android:contentDescription="@string/color_purple_button"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@id/add_edit_iv_blue"
        app:layout_constraintStart_toEndOf="@id/add_edit_iv_yellow"
        app:layout_constraintTop_toTopOf="@id/add_edit_iv_yellow" />

    <ImageView
        android:id="@+id/add_edit_iv_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_color"
        android:backgroundTint="@color/blue"
        android:contentDescription="@string/color_blue_button"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@id/add_edit_iv_pink"
        app:layout_constraintStart_toEndOf="@id/add_edit_iv_purple"
        app:layout_constraintTop_toTopOf="@id/add_edit_iv_purple" />

    <ImageView
        android:id="@+id/add_edit_iv_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_color"
        android:backgroundTint="@color/pink"
        android:contentDescription="@string/color_pink_button"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_edit_iv_blue"
        app:layout_constraintTop_toTopOf="@id/add_edit_iv_blue" />

    <EditText
        android:id="@+id/add_edit_et_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:hint="@string/add_edit_title_hint"
        android:importantForAutofill="no"
        android:inputType="textImeMultiLine"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_edit_iv_orange" />

    <EditText
        android:id="@+id/add_edit_et_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:gravity="start"
        android:hint="@string/add_edit_content_hint"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_edit_et_title" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_edit_fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_edit_save_button"
        android:src="@drawable/ic_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>